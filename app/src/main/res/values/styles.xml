<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- TOOLBAR TITLE THEME -->
    <!-- Color of the title in the Toolbar -->

    <color name="colorDivider">#ECECEC</color>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorToolBarBackground</item>
        <item name="colorPrimaryDark">@color/colorToolbarTop</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>


</resources>
