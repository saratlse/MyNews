<resources>


    <!-- TOOLBAR TITLE THEME -->
    <!-- Color of the title in the Toolbar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorToolBarBackground</item>
        <item name="colorPrimaryDark">@color/colorToolbarTop</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
